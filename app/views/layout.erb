<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hello World</title>
    <link rel="stylesheet" href="/stylesheets/foundation.min.css" />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>
  <body>

    <div class="top-bar">
      <div class="container">
        <a class="logo" href="/">My Sinatra App</a>

        <ul class="top-bar-section">
          <% if current_user %>
            <li>Signed in as <%= current_user.username %></a></li>
            <li><a href="/sign_out">Sign Out</a></li>
          <% else %>
            <li><a href="/auth/github">Sign In</a></li>
          <% end %>
        </ul>
      </div>
    </div>

    <% if flash.any? %>
      <div class="flash">
        <div class="container">
          <%= flash[:notice] %>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <script src="javascripts/vendor/jquery.min.js"></script>
    <script src="javascripts/vendor/what-input.min.js"></script>
    <script src="javascripts/foundation.min.js"></script>
    <script src="/javascripts/lodash.min.js"></script>
    <script src="/javascripts/app.js"></script>
    <script>
      $(document).foundation();
    </script>
  </body>
</html>
